{
    "views": {
        "other_view2": {
            "resource_id": "android:id/title",
            "class": "android.widget.TextView",
            "text": "User interface"
        },
        "other_view1": {
            "class": "android.widget.TextView",
            "text": "Appearance"
        },
        "target_view": {
            "resource_id": "de.tobiasbielefeld.solitaire:id/preference_only_for_this_game_switch",
            "class": "android.widget.CheckBox"
        }
    },
    "states": {
        "target_state": {
            "views": ["target_view", "other_view1", "other_view2"]
        }
    },
    "operations": {
        "target_operation": [
            {
                "event_type": "touch",
                "target_view": "target_view"
            }
        ]
    },
    "main": {
        "target_state": ["target_operation"]
    }
}
